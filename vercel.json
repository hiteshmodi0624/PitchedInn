{
  "build": {
    "env": {
      "PRISMA_FORCE_NAPI": "true"
    },
    "functions": {
      "postBuild": {
        "runtime": "yarn",
        "memory": 1024,
        "includeFiles": ["prisma/**"],
        "excludeFiles": ["**/*"],
        "package": {
          "include": ["prisma"],
          "exclude": ["**"]
        },
        "command": "npx prisma generate"
      }
    }
  }
}